<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unsplash" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_500</item>
        <item name="colorPrimaryVariant">@color/black_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black_500</item>
        <!-- Customize your theme here. -->
        <item name="colorSurface">@color/accent</item>
        <item name="actionBarSize">46dp</item>
    </style>

    <style name="TextAppearance.Material3.ActionBar.Title" parent="@style/TextAppearance.Material3.ActionBar.Title" tools:ignore="ResourceCycle">
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.Unsplash.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/black_500</item>
    </style>

    <style name="ThemeOverlay.Unsplash.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>
</resources>